# installkernel completion

have installkernel &&
{

_installkernel()
{
    local cur prev

    COMPREPLY=()
    _get_comp_words_by_ref -n : cur prev

    case $prev in
        -s|--ssh)
            _known_hosts_real -a "$cur"
            #_filedir
            return 0
            ;;
        -b|--build-dir)
            _filedir -d
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '--help --make --make-install-modules \
            --build-dir --no-build-dir --ssh --install-kernel --ccache --ctags \
            --make-menuconfig --make-oldconfig \
            -h -m -i -b -n -s -k -f -t -c -o' -- "$cur" ) )
    fi

    return 0
}

shopt -u hostcomplete && complete -F _installkernel installkernel

}
# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
